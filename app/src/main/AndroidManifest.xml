<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".application.AmazonCloneApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AmazonClone"
        android:usesCleartextTraffic="true"
        tools:replace="android:fullBackupContent"
        tools:targetApi="31">
        <activity
            android:name=".ui.activities.RoutesActivity"
            android:exported="true"
            android:noHistory="true"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.AuthActivity"
            android:exported="true"
            android:label="@string/title_activity_auth"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AmazonClone"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.activities.RootBottomTabBarActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AmazonClone"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.activities.AddProductActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AmazonClone"
            tools:ignore="LockedOrientationActivity" />

        <meta-data
            android:name="CLOUDINARY_URL"
            android:value="cloudinary://@dewwwkz1a" />
    </application>

</manifest>